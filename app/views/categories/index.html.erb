<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://www.modishliving.co.uk/wp-content/uploads/2024/05/how_to_choose_a_large_dining_table_resized_image1_2048x2048.jpg)">
  <h1>Cookbook</h1>
  <h3>Save your favourite recipes</h3>
</div>

<div class="container w-75">
  <div class="info-top">
    <h2>List of Categories</h2>
    <%= link_to "New Category", new_category_path, class: "btn btn-warning" %>
  </div>

  <div class="cards-category">
    <% @categories.each do |category| %>
      <%= link_to category_path(category), class:"d-block" do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://img.freepik.com/free-photo/colorful-background-vegetables-with-copy-space_23-2148655338.jpg)">
          <div>
            <h3><%= category.name %></h3>
            <p><%= category.bookmarks.count %> recipes</p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
