<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
  <h1><%= @category.name %></h1>
</div>

<div class="container w-75">
  <div class="info-top">
    <h2>Recipes</h2>
    <%= link_to "New Recipe", new_category_bookmark_path(@category), class: "btn btn-warning" %>
  </div>

  <div class="cards">
    <% @category.bookmarks.each do |bookmark| %>
      <div class="card-trip">
        <img src="<%= bookmark.recipe.image_url %>">

        <%= link_to bookmark_path(bookmark), 
                    data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                     class: 'btn-delete' do %>
            <i class="fa-solid fa-trash"></i>
         <% end %>

        <div class="card-trip-description">
          <h3><%= bookmark.recipe.name %></h3>
          <p><%= bookmark.recipe.description.truncate(100) %></p>
        </div>

        <div class="card-trip-infos">
          
            <p class="text-muted fst-italic w-50">" <%= bookmark.comment.truncate(15) %></p>
            <p><%= bookmark.recipe.rating %> <%= 'â­' * bookmark.recipe.rating %></p>
          
        </div>
      </div>
    <% end %>
  </div>
</div>

